generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Remetente {
  id        Int    @id @default(autoincrement())
  idProduto Produto[]
  nome      String
  CPF       String @unique
  numero    String
  bairro    String
  cidade    String
  estado    String
  CEP       String
}

model Destinatario {
  id        Int    @id @default(autoincrement())
  idProduto Produto[]
  nome      String
  CPF       String @unique
  numero    String
  bairro    String
  cidade    String
  estado    String
  CEP       String
}

model Produto {
  id              Int    @id @default(autoincrement())
  nome            String
  status          String
  cadastro        DateTime @default(now())
  entrega         DateTime @default(now())
  remetente       Remetente @relation(fields: [idRemetente], references: [id])
  idRemetente     Int
  destinatario    Destinatario @relation(fields: [idDestinatario], references: [id])
  idDestinatario  Int
}